<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<form action="/updatequestion/<%= qId%> "    id="form">

  
   <h1>Update Your Question</h1>
   QNo :  <input type="text"  value=<%= data.QNo %>   name="QNo" placeholder="Add a  Question No"><br><br>
   Question : <input type="text" value=<%= data.Question %> name="Question"  placeholder="Add a Question"><br><br>
   Options for the question:<br>
   Option1 : <input type="text" value= <%= data.Options[0]%> name="Options" placeholder="Add  option1"><br><br>
   option2 : <input type="text" value= <%= data.Options[1]%> name="Options" placeholder="Add  option2"><br><br>
   option3 : <input type="text" value= <%= data.Options[2]%> name="Options" placeholder="Add  option3"><br><br>
   option4 : <input type="text" value= <%= data.Options[3]%> name="Options" placeholder="Add  option4"><br><br>
   Correct Answer :  <input type="text" value= <%= data.correctAnswer%> name="correctAnswer"  placeholder="Enter correct Answer "><br><br>
   <button id="update">Update</button>
</form>

<script>
   $("#form").submit(function(e) {
    e.preventDefault(); 
    var form = $(this);
    var url = form.attr('action');
    $.ajax({
         type: "put",
         url: url,
         data: form.serialize(), 
         success: function(data){
             console.log(data);
             alert('Data Updated Sucessfully')
         }
    });
});
</script>